<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sub_lists"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".bookmarks.Sub">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/bookmarks_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="즐겨찾기 장소 이름"
            android:layout_margin="10dp"
            android:textSize="18dp"
            android:layout_weight="15"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/bttn_delete"
            android:layout_width="18dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/login_x"
            android:layout_weight="0.2"
            android:layout_margin="10dp"
            app:tint="#aaaaaa" />
    </LinearLayout>

    <TextView
        android:id="@+id/bookmarks_addr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="즐겨찾기 주소"
        android:layout_marginHorizontal="10dp"
        android:textSize="16dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc"
        android:layout_marginTop="25dp"/>

</LinearLayout>