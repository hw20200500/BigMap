<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mapview">

    <FrameLayout
        android:id="@+id/tmap_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="130dp"
        app:layout_constraintTop_toTopOf="parent">




    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="15dp"
            android:onClick="searching"
            android:src="@drawable/main_search_icon"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/refuelButton"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/main_refuel_icon_modif"
                        android:layout_gravity="top"
                        android:layout_marginTop="0dp"
                        android:layout_marginStart="30dp"
                        android:clickable="true"
                        android:onClick="onClick1"/>

                    <ImageView
                        android:id="@+id/parkingButton"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/main_parking_icon_modif"
                        android:layout_gravity="top"
                        android:layout_marginTop="0dp"
                        android:layout_marginStart="10dp"
                        android:clickable="true"
                        android:onClick="onClick2"/>

                    <ImageView
                        android:id="@+id/deleteButton"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/main_rest_area_icon_modif"
                        android:layout_gravity="top"
                        android:layout_marginTop="0dp"
                        android:layout_marginStart="10dp"
                        android:clickable="true"
                        android:onClick="onClick3"/>


                </LinearLayout>
            </HorizontalScrollView>




            <ImageView
                android:id="@+id/locationImage"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_marginTop="0dp"
                android:layout_weight="0"
                android:layout_marginRight="20dp"
                android:layout_marginHorizontal="30dp"
                android:layout_gravity="right"
                android:clickable="true"
                android:src="@drawable/favorites_gps_icon_modif"/>


        </LinearLayout>


    </LinearLayout>




    <!--    홈, 즐겨찾기 페이지 bottomsheet frame -->
    <FrameLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        app:behavior_peekHeight="220dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:layout_constraintBottom_toTopOf="@id/bottom_sheet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
    </FrameLayout>

    <!-- bottom menu -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:foregroundGravity="center_horizontal"
        android:background="#fff"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_navi_menu"/>

    <FrameLayout
        android:id="@+id/loc_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        app:behavior_peekHeight="200dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:layout_constraintBottom_toTopOf="@id/bottom_sheet"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"></FrameLayout>

    <!--    게시판, 마이페이지 frame-->
    <FrameLayout
        android:id="@+id/main_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</androidx.coordinatorlayout.widget.CoordinatorLayout>