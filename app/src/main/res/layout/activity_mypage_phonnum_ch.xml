<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".mypage.mypage_phonnumCh">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="변경할 전화번호를 입력하세요."
        android:textSize="20dp"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:id="@+id/userinfom_layout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="45dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="휴대전화"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/PhonNum_edit_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <EditText
                    android:id="@+id/userPhoneNum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:hint="전화번호 입력"
                    android:inputType="phone"
                    android:maxLength="13"
                    android:background="@drawable/shape"/>

                <Button
                    android:id="@+id/button_num_send"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:paddingVertical="12dp"
                    android:layout_weight="2.5"
                    android:text="인증번호"
                    android:textSize="12dp"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="인증번호 입력"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape">

            <EditText
                android:id="@+id/phoneCertif_Num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@null"
                android:hint="인증번호"/>
        </LinearLayout>

        <Button
            android:id="@+id/button_certif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="인증 확인"
            android:backgroundTint="#777777"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="전화번호 수정"
        android:id="@+id/button_save"
        android:padding="10dp"
        android:layout_gravity="bottom"/>

</LinearLayout>