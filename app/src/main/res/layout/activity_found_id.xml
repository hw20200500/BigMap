<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".login_register.foundId">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/login_logo_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.39" />

    <TextView
        android:id="@+id/text_guide"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:text="귀하의 이메일 주소는"
        android:textSize="23dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo" />

    <TextView
        android:id="@+id/text_useremail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0000@gmail.com"
        app:layout_constraintTop_toBottomOf="@id/text_guide"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textSize="26dp"
        android:textColor="@color/main_blue"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/text_guid2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/text_useremail"
        app:layout_constraintTop_toBottomOf="@id/text_guide"
        android:layout_marginTop="10dp"
        android:text="입니다."
        android:textSize="23dp"
        android:layout_marginLeft="10dp"/>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/text_useremail"
        android:layout_marginTop="10dp"
        android:background="#aaaaaa"
        android:layout_marginHorizontal="18dp"/>

    <TextView
        android:id="@+id/findpw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:onClick="findpw"
        android:text="비밀번호 찾기"
        android:textSize="18dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/line2"
        app:layout_constraintTop_toBottomOf="@id/line" />

    <View
        android:id="@+id/line2"
        android:layout_width="1dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@id/line"
        app:layout_constraintLeft_toRightOf="@id/findpw"
        app:layout_constraintRight_toLeftOf="@id/go_login"
        android:background="#aaaaaa"
        android:layout_marginHorizontal="8dp"/>



    <TextView
        android:id="@+id/go_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/line"
        android:layout_marginTop="10dp"
        android:text="로그인하러 가기"
        app:layout_constraintLeft_toRightOf="@id/line2"
        app:layout_constraintRight_toRightOf="parent"
        android:clickable="true"
        android:onClick="go_login"
        android:textSize="18dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>