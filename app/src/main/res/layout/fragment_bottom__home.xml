<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/shape_layout"
    android:backgroundTint="@color/main_blue"
    app:behavior_hideable="false"
    app:behavior_peekHeight="150dp"
    app:layout_behavior="@string/bottom_sheet_behavior"
    tools:context=".bottom.Bottom_Home">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="20dp"
        android:includeFontPadding="false"
        android:text="최근 목적지"
        android:textColor="#ffffff"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/recent_linear1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginRight="7dp"
            android:background="@drawable/shape_white"
            android:backgroundTint="#ffffff"
            android:elevation="15dp"
            android:gravity=""
            android:padding="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="#000000"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/recent_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="최근 목적지"
                android:layout_gravity="center_vertical"
                android:textColor="#888888"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/recent_linear2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/shape"
            android:backgroundTint="#ffffff"
            android:padding="10dp"
            android:layout_marginRight="7dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textColor="#000000"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/recent_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="최근 목적지"
                android:layout_gravity="center_vertical"
                android:textColor="#888888"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/recent_linear3"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/shape"
            android:backgroundTint="#ffffff"
            android:padding="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textColor="#000000"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/recent_title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="최근 목적지"
                android:layout_gravity="center_vertical"
                android:textColor="#888888"
                android:textSize="12dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/refuel01"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:adjustViewBounds="true"
                android:src="@drawable/home_refuel2_icon_modif" />

            <!--            Sub에서 리스트 복사해서 붙여넣을 장소. 여기서는 안보이지만 이후 실행하면 리스트가 보일 예정.-->
            <LinearLayout
                android:id="@+id/gas_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:adjustViewBounds="true"
                android:id="@+id/restarea01"
                android:src="@drawable/home_rest_icon_modif" />

<!--            Sub에서 리스트 복사해서 붙여넣을 장소. 여기서는 안보이지만 이후 실행하면 리스트가 보일 예정.-->
            <LinearLayout
                android:id="@+id/resting_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>

